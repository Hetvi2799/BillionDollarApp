pipeline {
  agent any
  parameters {
        string(name: 'DEPLOY_BUILD_NO', defaultValue: '', description: 'Build number to deploy')
    }
  stages {
    
    stage('Deploy') {
      steps {
        sh"""
        ls
        cd app
        ls
        cp /var/jenkins_home/builds/build_${params.DEPLOY_BUILD_NO}.zip .
        unzip build_${params.DEPLOY_BUILD_NO}.zip
        sshpass -p 'test' ssh test@nginx "scp -r build_${params.DEPLOY_BUILD_NO}/* test@nginx:/usr/share/nginx/html/"
        cd ..
        """
      }
    }
  }
}
